        for (let i = 1; i <= 30; i++) {
            const selectedOption = document.querySelector(`input[name="q${i}"]:checked`);
            if (selectedOption && selectedOption.value === correctAnswers[i - 1]) {
                score++;
            }
        }

        return score;
    }

    async function saveScore(score, submissionTime) {
            const data = {
                score: score,
                submissionTime: submissionTime,
            };

            form.action = `/phyquiz`;  // Update the action without query parameters
